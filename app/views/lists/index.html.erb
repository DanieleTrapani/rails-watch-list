<div class="index-banner banner" style="background-image: asset-url('movies.jpg');">
  <h1>Save your favourite movies</h1>
</div>
<div class="lists container py-5">
  <div class="info d-flex justify-content-between">
    <h4>My Lists</h4>
    <%= link_to 'Create a new List', new_list_path %>
  </div>
  <div class="list-container row py-5">
    <% @lists.each do |list| %>
      <%= render partial: 'partials/list', locals: {list:} %>
    <% end %>
  </div>
</div>
